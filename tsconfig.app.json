{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/types/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@composables": ["./src/composables"],
      "@config": ["./src/config"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@typings/*": ["./src/types/*"],
      "@views/*": ["./src/views/*"],
      "@utilites/*": ["./src/utilities/*"],
    }
  }
}
